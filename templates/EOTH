CREATE OR REPLACE TRIGGER <name>
  before INSERT OR UPDATE
  on <table>
  FOR EACH ROW
  declare
      e_exception exception;
  begin
    if (<column_column> > <operator> <statement_statement>) THEN
      raise e_exception;
    END IF;

    exception
    when e_exception then
    raise_application_error(-20000, ''<error>');
    end;

    CREATE OR REPLACE TRIGGER <name> before INSERT OR UPDATE on <table> FOR EACH ROW declare e_exception exception; begin if (<column_column> > <operator> <statement_statement>) THEN raise e_exception; END IF; exception when e_exception then raise_application_error(-20000, <error>); end;